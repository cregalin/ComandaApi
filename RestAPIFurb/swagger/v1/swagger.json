{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/usuarios": {
      "post": {
        "summary": "Cria um usuário",
        "tags": [
          "Usuários"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "usuario",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "senha": {
                  "type": "string"
                }
              },
              "required": [
                "email",
                "senha"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário criado"
          },
          "400": {
            "description": "Requisição inválida"
          }
        }
      }
    },
    "/usuarios/{id}": {
      "get": {
        "summary": "Recupera um usuário",
        "tags": [
          "Usuários"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "integer",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário encontrado",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "email": {
                  "type": "string"
                },
                "senha": {
                  "type": "string"
                }
              },
              "required": [
                "id"
              ]
            }
          },
          "404": {
            "description": "Usuário não encontrado",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "object",
                  "properties": {
                    "text": {
                      "type": "string"
                    }
                  }
                }
              },
              "required": [
                "id"
              ]
            }
          }
        }
      }
    },
    "/usuarios/": {
      "get": {
        "summary": "Recupera todos os usuários",
        "tags": [
          "Usuários"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Usuários encontrados",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "email": {
                  "type": "string"
                },
                "senha": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}